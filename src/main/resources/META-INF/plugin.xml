<?xml version="1.0" encoding="UTF-8"?>

<idea-plugin>
    <id>com.ryker.project</id>
    <name>DeepSeek Assistant</name>
    <vendor email="RTG1999@163.COM" url="https://www.3body.com">三体</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <actions>
        <action id="DeepSeek.Action"
                class="com.ryker.project.DeepSeekAction"
                text="DeepSeek 优化"
                description="使用 DeepSeek 优化选中代码">
            <add-to-group group-id="EditMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift D"/>
        </action>
         <action id="Ones.Query.Action"
                class="com.ryker.project.OnesQueryAction"
                text="ONES 查询"
                description="使用 ONES 接口查询数据">
            <add-to-group group-id="EditMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift O"/>
        </action>
    </actions>
</idea-plugin>